<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="space.rybakov.campus.presentation.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_adsFragment"
            app:destination="@id/adsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_reviewsFragment"
            app:destination="@id/reviewsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/adsFragment"
        android:name="space.rybakov.campus.presentation.fragments.AdsFragment"
        android:label="AdsFragment"
        tools:layout="@layout/fragment_ads"/>
    <fragment
        android:id="@+id/reviewsFragment"
        android:name="space.rybakov.campus.presentation.fragments.ReviewsFragment"
        android:label="ReviewsFragment"
        tools:layout="@layout/fragment_reviews"/>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="space.rybakov.campus.presentation.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>


</navigation>